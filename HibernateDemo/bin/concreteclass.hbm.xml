<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="polymorphic.ShoeFactory" table="shoetable">
		<id name="sid" type="int" unsaved-value="0">
			<generator class="hilo" />
		</id>
		<property name="name" />

	</class>

	<class name="polymorphic.BataFactory" table="batatable">
		<id name="sid" type="int" unsaved-value="0">
			<generator class="hilo" />
		</id>
		<property name="name" />
		<property name="bataName" />
	</class>

	<class name="polymorphic.LakhaniFactory" table="lakhanitable">
		<id name="sid" type="int" unsaved-value="0">
			<generator class="hilo" />
		</id>
		<property name="name" />
		<property name="lakhaniName" type="string" />
	</class>



</hibernate-mapping>
